{
  "name": "train-4",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "GaussianNoise",
        "args": {
          "std": "random"
        }
      },
      {
        "type": "RandomPitchShift",
        "args": {
          "p": 0.2,
          "sr": 16000,
          "n_steps": "random"
        }
      },
      {
        "type": "TimeStretching",
        "args": {
          "rate": 1.2,
          "p": 0.2
        }
      },
      {
        "type": "Gain",
        "args": {
          "sr": 16000,
          "min_gain_in_db": -15.0,
          "max_gain_in_db": 5.0,
          "p": 0.2
        }
      },
      {
        "type": "DimAligner",
        "args": {
        }
      }
    ],
    "spectrogram": [
      {
        "type": "MaskAug",
        "args": {
          "p": 0.5,
          "time_percent": 0.05,
          "freq_percent": 0.1
        }
      }
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "S": 1,
      "R": 5,
      "B_num": 5,
      "kernel_sizes": [33, 33, 39, 51, 63, 75, 87, 1],
      "channel_sizes": [256, 256, 256, 512, 512, 512, 512, 1024],
      "n_feats": 64,
      "fc_hidden": 512
    }
  },
  "data": {
    "test": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-2
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": true
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingWarmRestarts",
    "args": {
      "T_0": 1000
    }
  },
  "trainer": {
    "epochs": 400,
    "save_dir": "saved/",
    "save_period": 20,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
